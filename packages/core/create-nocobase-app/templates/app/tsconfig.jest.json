{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "paths": {}
  },
  "exclude": [
    "./packages/*/dist", 
    "./packages/*/esm", 
    "./packages/*/es", 
    "./packages/*/lib"
  ]
}